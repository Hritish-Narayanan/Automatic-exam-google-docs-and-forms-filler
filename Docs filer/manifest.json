{
  "manifest_version": 2,
  "name": "Google Forms & Docs Auto-Answer",
  "version": "1.0",
  "description": "Automatically answers questions in Google Forms and assists with Google Docs using z.ai API",
  "permissions": [
    "storage",
    "https://docs.google.com/*",
    "https://api.z.ai/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://docs.google.com/forms/*",
        "*://docs.google.com/document/*"
      ],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "googleforms-autoanswer@example.com"
    }
  },
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png"
  }
}